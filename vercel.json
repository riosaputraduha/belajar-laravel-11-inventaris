{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "public" }
    },
    {
      "src": "api/**/*.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    { "src": "/build/(.*)", "dest": "/build/$1" },
    { "src": "/(.*)",        "dest": "/api/index.php" }
  ]
}
